<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:gravity="center"
            app:cardCornerRadius="20dp"
            android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        >

    <TextView
        android:id="@+id/binName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/date"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:textStyle="bold"
        android:textColor="#46E0A2"
        android:text="Assolna Bin"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/pointsEarned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="40dp"
        android:textColor="#46E0A2"
        android:textStyle="bold"
        android:layout_marginEnd="50dp"
        android:layout_toEndOf="@+id/binName"
        android:text="+20"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/wasteType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/binName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textColor="#46E0A2"
        android:layout_toEndOf="@+id/wasteWeight"
        android:textSize="25sp"
        android:text="Plastic"/>

    <TextView
        android:id="@+id/wasteWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/binName"
        android:layout_marginTop="5dp"
        android:textColor="#fff"
        android:layout_marginLeft="50dp"
        android:textSize="25sp"
        android:text="20Kg"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pointsEarned"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="5dp"
        android:textColor="#fff"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="15dp"
        android:layout_toEndOf="@+id/wasteType"
        android:text="Points"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textStyle="italic"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="15dp"
        android:textColor="#fff"
        android:textSize="25sp"
        android:text="2nd May,2021"/>

        </RelativeLayout>
        </androidx.cardview.widget.CardView>
</LinearLayout>